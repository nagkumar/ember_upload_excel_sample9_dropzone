{{yield}}
<div class="grid-table">
    <div class="table-header">
        <div class="row">
            <div class="col-md-6 col-sm-4">
                File Name
            </div>
            <div class="col-sm-2">
                Size/Progress
            </div>

            <div class="col-sm-2">
                Date
            </div>
        </div>
    </div>

  {{#each parentController.files as |aFile| }}
      <div>
          <div class="row">
              <div class="col-md-6 col-sm-4">
                {{aFile.name}}
              </div>

            {{#if aFile.isProgressHide}}
                <div class="col-md-6 col-sm-4">
                  {{aFile.size}}
                </div>
            {{else}}
                <div class="progress">
                    <div class="progress-bar" role="progressbar" aria-valuenow="70"
                         aria-valuemin="0" aria-valuemax="100" style="width:70%">
                        70%
                    </div>
                </div>
            {{/if}}
          </div>
      </div>
  {{/each}}
</div>
