{{yield}}
<div class="grid-table">
    <div class="table-header">
        <div class="row">
            <div class="col-md-6 col-sm-4">
                File Name
            </div>
            <div class="col-sm-2">
                Size/Progress
            </div>

            <div class="col-sm-2">
                Date
            </div>
        </div>
    </div>

  {{#each parentController.files as |file| }}
      <div>
          <div class="row">
              <div class="col-md-6 col-sm-4">
                {{file.name}}
              </div>
              <div class="col-sm-2">
                {{file.size}}
              </div>
              <div class="col-sm-2">
              </div>
          </div>
      </div>
  {{/each}}
</div>
